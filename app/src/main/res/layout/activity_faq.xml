<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaqActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="668dp"
        android:background="@color/neutral"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/neutral"
            android:contentDescription="home"
            android:onClick="Home"
            android:scaleType="centerCrop"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/casa" />

        <ImageButton
            android:id="@+id/imageButton12"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/neutral"
            android:contentDescription="map"
            android:onClick="Map"
            android:scaleType="centerCrop"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/map" />

        <ImageButton
            android:id="@+id/imageButton13"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/neutral"
            android:contentDescription="scan"
            android:onClick="scan"
            android:scaleType="centerCrop"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/recycle" />

        <ImageButton
            android:id="@+id/imageButton14"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/neutral"
            android:contentDescription="ranking"
            android:onClick="Ranking"
            android:scaleType="centerCrop"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/trophy" />

        <ImageButton
            android:id="@+id/imageButton15"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/neutral"
            android:contentDescription="info"
            android:onClick="Info"
            android:scaleType="centerCrop"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/menu" />

    </LinearLayout>

    <TextView
        android:id="@+id/forgotpass"
        android:layout_width="357dp"
        android:layout_height="137dp"
        android:layout_centerHorizontal="true"
        android:text="Estamos aquí para ayudarte y responder a cualquier duda que tengas, estas son las más comunes."
        android:textColor="@color/black"
        android:textSize="65px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <TextView
        android:id="@+id/FAQ"
        android:layout_width="77dp"
        android:layout_height="29dp"
        android:layout_centerHorizontal="true"
        android:text="FAQ"
        android:textColor="@color/black"
        android:textSize="45px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.299" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/neutral"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/primeraPregunta"
        android:layout_width="340dp"
        android:layout_height="26dp"
        android:layout_centerHorizontal="true"
        android:text="¿Qué es League of Recycle?"
        android:textColor="@color/black"
        android:textSize="45px"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351" />




</androidx.constraintlayout.widget.ConstraintLayout>